@model IEnumerable<ProiectMoldovanAlexWebAppMVC.Models.Owner>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrivingConduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfAccidents)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrivingConduct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfAccidents)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OwnerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OwnerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OwnerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
